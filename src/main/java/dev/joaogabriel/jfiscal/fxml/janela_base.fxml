<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.joaogabriel.jfiscal.view.JanelaBase"
            prefHeight="720.0" prefWidth="1280.0">
    <top>
        <MenuBar>
            <Menu text="Arquivo">
                <MenuItem mnemonicParsing="false" text="Sair" />
            </Menu>
            <Menu text="Cadastros">
                <MenuItem mnemonicParsing="false" text="Emitentes" onAction="#abrirJanelaCadastroEmitente" />
                <MenuItem mnemonicParsing="false" text="Clientes" onAction="#abrirJanelaCadastroCliente" />
                <MenuItem mnemonicParsing="false" text="Mercadorias" />
            </Menu>
            <Menu text="Faturamento">
                <MenuItem mnemonicParsing="false" text="Faturas" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <StackPane fx:id="janelaBase" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
